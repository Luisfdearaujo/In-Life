<div class="align-form">
  <h2>Edit a Client</h2>
  <form
    class="form-signin"
    action="/client-update/{{client._id}}/edit"
    method="POST"
  >

    <h1 class="h3 mb-3 font-weight-normal"></h1>
    <label for="name" class="sr-only">Name</label>
    <input
      type="text"
      name="name"
      id="name"
      class="form-control"
      placeholder="Name"
      required=""
      autofocus=""
      value="{{client.name}}"
    />
    <label for="lastName" class="sr-only">Last Name</label>
    <input
      type="text"
      name="lastName"
      id="lastName"
      class="form-control"
      placeholder="lastName"
      required=""
      value="{{client.lastName}}"
    />
    <label for="email" class="sr-only">Email</label>
    <input
      type="text"
      name="email"
      id="email"
      class="form-control"
      placeholder="Email"
      required=""
      value="{{client.email}}"
    />

    <div class="checkbox mb-3">

    </div>
    <a href="/clients">
      <button class="btn btn-m btn-primary btn-block" type="submit">Save Changes</button>
    </a>
    <hr />

    <form action="/client-update/{{client._id}}/delete" method="POST">
      <button
        class="btn btn-m btn-primary btn-block"
        type="submit"
      >Delete</button>
    </form>
    <p class="mt-5 mb-3 text-muted">Â© In-Life 2021</p>
  </form>
</div>